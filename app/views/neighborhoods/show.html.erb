<div class="title-banner">
  <h3><div class="showpage-title"><%= @neighborhood.name %></div></h3>
  <h5 id="quadrant">Quadrant: <%= @neighborhood.quadrant %></h5>
  <h3>
    <div class="post-here">
      <% if !current_user %>
        <%= link_to "Log In to Post Your Input", new_user_session_path %>
      <% else %>
        <%= link_to "Post Your Input", new_neighborhood_post_path(@neighborhood)%>
      <% end %>
    </div>
  </h3>


</div>

<div class="page-content-container">

  <div class="dotted-outline">
    <div class="centered-title">
      <h3>Citizen Voices</h3>
    </div>

    <h3>
      <% if @neighborhood.posts.count == 0 %>
        <div class="no-posts">No Posts Yet for <%= @neighborhood.name %></div>
      <% else %>
        <% @neighborhood.posts.each do |post| %>
          <div class="hood-posts"><%= link_to post.title, neighborhood_post_path(@neighborhood, post) %></div>
        <% end %>
      <% end %>
    </h3>
  </div>

  <br>
  <div id="map"></div>

  <div class="bottom-nav">
   <%= link_to "Return to All Neighborhoods", neighborhoods_path %>
  </div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({
  provider: {
    center: {lat: 38.909110, lng: -77.017607},
    minZoom: 12
  },
    internal: {id: 'map'}
});
</script>
