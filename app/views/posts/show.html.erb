<div class="post-title-banner">
  <div class="post-title">
    <h3><%= @post.title %></h3>
  </div>
  <div class="post-content">
    <p>"<%= @post.content %>"<p>
  </div>

  <div class="page-content-container">
    <div class="post-details">
      <p>submitted by: <%= @post.author %></p>
      <p>neighborhood: <%= @neighborhood.name %></p>
      <p>type of inquiry: <%= @post.inquiry_type %></p>
    </div>

    <% if @post.photo_url != "" %>
      <img src="<%= @post.photo_url %>">
    <% end %>

    <hr>

    <div class="timestamp">
      <p>created on <%= @post.created_at.month %>/<%= @post.created_at.day %>/<%= @post.created_at.year %></p>
      <p>updated on <%= @post.updated_at.month %>/<%= @post.updated_at.day %>/<%= @post.updated_at.year %></p>
    </div>

    <div class="bottom-nav">
        <% if current_user == @post.user %>
          <%= link_to "Edit Post", edit_neighborhood_post_path(@neighborhood, @post)%> ||
          <%= link_to "Delete Post", neighborhood_post_path(@neighborhood, @post), method: :delete %>
        <% end %>
      <br>
        <%= link_to "Return to #{@neighborhood.name} Page", neighborhood_path(@neighborhood) %>
    </div>
  </div>

</div>


